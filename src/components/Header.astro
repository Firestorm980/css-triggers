---
import PrimaryNavigation from "@components/PrimaryNavigation.astro";
import SearchForm from "@components/SearchForm.astro";

const base = import.meta.env.BASE_URL
---
<header class="site-header">
	<div class="site-header__inner">
		<div class="site-header__area site-header__area--logo">
			<a class="site-logo" href={base}>
				{'{} Triggers'}
			</a>
		</div>
		<div class="site-header__area site-header__area--navigation">
			<h2>Properties</h2>
			<PrimaryNavigation />
		</div>
	</div>
</header>
<style is:global>
	.site-header {
		background-color: var(--site-background);
		border-inline-end: 1px solid var(--site-accent);

		@media (width <= 42em) {
			max-width: 80vw;
			transform: translateX(-100%);
			width: 20em;
			z-index: 1;
		}
	}

	.site-header__inner {
		display: flex;
		flex-direction: column;
		height: 100dvh;
		position: sticky;
		top: 0;
	}

	.site-header__area {
		padding-block: 1rem;

		& ~ .site-header__area {
			border-block-start: 1px solid var(--site-accent);
		}

		& h2 {
			color: color-mix(in srgb, var(--site-color) 70%, var(--site-background));
			font-size: 0.875rem;
			font-weight: 400;
			margin: 0;
			padding-block-end: 1rem;
			padding-inline: 1rem;
		}
	}

	.site-header__area--logo {
		padding: 1rem;
	}

	.site-header__area--navigation {
		overflow: auto;
	}

	.site-logo {
		background-clip: text;
		background-color: var(--site-color);
		background-image: linear-gradient(to right, var(--color-purple) 0%, var(--color-olive) 50%, var(--color-green) 100%);
		color: transparent;
		font-size: 1.75em;
		font-weight: 700;
		text-decoration: none;
	}
</style>
